      }
      #title {
        margin-top: 2rem;
        text-align: center;
      }
      #status {
        display: flex;
      }
      .left {
        width: 400px;
        margin-right: 2rem;
        flex-shrink: 0; /* サイズ固定 */
      }
      .ScrPr {
        text-align: center;
        /height: 150px;
      }
      .ScrPr img {
        width: 350px;
        height: 350px;
      }
      .right {
      }
      #cate #value {
        margin-left: 2rem;
      }
      #cate_edit {
        text-align: center;
      }
      #cate_edit .button {
        display: inline-block;
        margin: auto;
        padding: 0.5rem 1rem;
        background-color: rgba(255,50,0,0.8);
      }
      span.edit {
        font-weight: normal;
      }
      #review_list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-content: space-around;
        margin: 2rem 0 0 0;
        padding: 2rem;
        background-color: rgba(0,0,0,0.05);
      }
      .review {
        flex-shrink: 0;
        flex-basis: 350px;
        margin: 1.5rem auto;
        padding: 1rem;
        background-color: rgba(255,255,255,1);
      }
      .res {
        text-align: right;
      }
      .comm_stus {
      }
      .recommend {
        display: inline;
        margin-left: 2%;
      }
      input {
        margin-left: 3%;
      }

