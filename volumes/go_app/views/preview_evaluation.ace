= doctype html
html lang=ja
  head
    meta charset=utf-8
    title はなくその食レポ の評価 | WebRepo★彡
    = css
      body {
        margin-bottom: 0;
        color: rgba(0,0,0,0.8);
      }
      #content {
        width: 90%;
        margin: auto;
      }
      #head {
        margin: 2rem;
      }
      #head h1 {
        display: inline;
      }
      .blue {
        color: #4183FF;
      }
      .red {
        color: #EC452C;
      }
      .yellow {
        color: #FFCF42;
      }
      .green {
        color: #00A508;
      }
      #popu_pp{
        margin-left: 1rem;
      }
      .button {
        display: block;
        font-size: larger;
        color: rgba(255,255,255,0.9);
        border-style: none;
        background-color: rgba(0,50,255,0.8);
        border-radius: 0.5rem;
        width: auto;
        margin-left: 1rem;
        padding: 1rem;
        text-align: center;
        cursor: pointer;        
      }
      .button#input_eval {
        display: inline-block;
        background-color: rgba(0,50,255,0.8);
        
      }
      #title {
        margin-top: 2rem;
        text-align: center;
      }
      #status {
        display: flex;
      }
      .left {
        width: 400px;
        margin-right: 2rem;
        flex-shrink: 0; /* サイズ固定 */
      }
      .ScrPr {
        text-align: center;
        /height: 150px;
      }
      .ScrPr img {
        width: 350px;
        height: 350px;
      }
      .right {
      }
      #cate #value {
        margin-left: 2rem;
      }
      #cate_edit {
        text-align: center;
      }
      #cate_edit .button {
        display: inline-block;
        margin: auto;
        padding: 0.5rem 1rem;
        background-color: rgba(255,50,0,0.8);
      }
      #review_list {
        margin: 2rem 0 0 0;
        padding: 2rem;
        background-color: rgba(0,0,0,0.05);
      }
      form#opt {
        text-align: right;
        margin-right: 3.5rem;
      }
      label {
        margin-left: 2rem;
      }
      select {
        margin-top: 0.5rem;
        font-size: 1rem;
      }
      option {
        font-size: 1rem;
      }
      .sort {
        display: inline-block;
      }
      select {
        margin-left: 0.5rem;
      }
      .sort select {
        display: block;
        margin-bottom: 0.5rem;
      }
      .sort select.order {
        float: right;
      }
      .sort input {
        margin: 0 0 0.5rem 0.5rem;
        font-size: 1rem;
      }
      #number {
        margin-left: 2rem;
        color: rgba(0,0,0,0.9);
      }
      #review_flex {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-content: space-around;
      }
      .review {
        flex-shrink: 0;
        flex-basis: 400px;
        margin: 1.5rem auto;
        padding: 1rem;
        background-color: rgba(255,255,255,1);
      }
      p.date {
        text-align: right;
        margin: 0;
        font-size: small;
      }
      h4.first {
        margin-top: 0;
      }
      .res {
        text-align: right;
      }
      .comm_stus {
      }
      .recommend {
        display: inline;
        margin-left: 2%;
      }
      input {
        margin-left: 3%;
      }

