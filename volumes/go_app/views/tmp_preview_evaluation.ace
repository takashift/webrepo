    = css
      body {
        margin-bottom: 0;
        color: rgba(0,0,0,0.8);
      }
      #content {
        max-width: 1200px;
        / width: 90%;
        margin: auto;
      }
      #head {
        margin: 2rem;
      }
      #head h1 {
        display: inline;
      }
      .blue {
        color: #4183FF;
      }
      .red {
        color: #EC452C;
      }
      .yellow {
        color: #FFCF42;
      }
      .green {
        color: #00A508;
      }
      #popu_pp{
        margin-left: 1rem;
      }
      .button {
        display: block;
        font-size: larger;
        font-weight: bold;
        color: rgba(255,255,255,0.9);
        border-style: none;
        background-color: rgba(0,0,0,0.6);
        border-radius: 0.5rem;
        width: auto;
        margin-left: 3rem;
        padding: 1rem;
        text-align: center;
        cursor: pointer;        
      }
      .button#input_eval {
        display: inline-block;
        background-color: rgba(0,50,255,0.8);
      }
      .button#top {
        display: inline-block;
        color: rgba(255,255,255,1);
      }
      #title {
        margin-top: 2rem;
        text-align: center;
      }
      #title a {
        color: rgba(0,0,0,0.55);
      }
      #status {
        display: flex;
      }
      .left {
        width: 400px;
        margin-right: 2rem;
        flex-shrink: 0; /* ã‚µã‚¤ã‚ºå›ºå®š */
      }
      .ScrPr {
        text-align: center;
        /height: 150px;
      }
      .ScrPr img {
        width: 350px;
        height: 350px;
      }
      .right {
      }
      #cate #value {
        margin-left: 2rem;
      }
      #cate_edit {
        text-align: center;
      }
      #cate_edit .button {
        display: inline-block;
        margin: auto;
        padding: 0.5rem 1rem;
        background-color: rgba(255,50,0,0.8);
      }
      #review_list {
        margin: 2rem 0 0 0;
        padding: 2rem;
        background-color: rgba(0,0,0,0.05);
      }
      .author {
        text-align: right;
        margin: 0;
      }
      p.date {
        text-align: right;
        margin: 0;
      }
      .review {
        flex-shrink: 0;
        flex-basis: 400px;
        margin: 1.5rem;
        padding: 2rem;
        background-color: rgba(255,255,255,1);
      }
      h4.first {
        margin-top: 0;
      }
      .typo {
        margin-left: 2rem;
        display: flex;
      }
      .typo_list {
        margin-left: 1.5rem;
      }
      .typo_list h4 {
        margin-right: 1.1rem;
        margin-top: 0;
        margin-bottom: 4px;
        padding: 0 1rem;
        background-color: rgba(255,255,255,1);
      }
      .incorrect {
        margin-right: 1.5rem;
        padding: 1rem;
        width: 45%;
        background-color: rgba(0,0,0,0.05);
      }
      .correct {
        padding: 1rem;
        width: 45%;
        background-color: rgba(0,0,0,0.05);
      }
      .doc {
        margin-left: 2rem;
      }
      .res {
        text-align: right;
      }
      .res .posted {
        margin-right: 30%;
      }
      .recommend {
        display: inline;
        margin-left: 2%;
      }
      .recommend input {
        margin-left: 3%;
        font-size: 1rem;
      }
      form.res_button {
        margin-top: 1rem;
        display: flex;
      }
      .input_dangerous {
        flex-grow: 1;
      }
      .input_dangerous input {
        font-size: 1rem;
      }
      .input_comment {
        text-align: right;
        flex-grow: 1;
      }
      .input_comment input {
        font-size: 1rem;
      }
      .comment_block {
        margin-left: 3rem;
      }
      .comment {
        margin-left: 1.5rem;
      }
