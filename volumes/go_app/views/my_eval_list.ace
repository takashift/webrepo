= doctype html
html lang=ja
  head
    = include common-setting
    = include font-family
    title {{.UserName}}さんの付けた評価一覧 | WebRepo☆彡
    = css
      #list {
        / margin: 0 0 0 150px;
        padding: 0 0 0 0.5rem;
        min-height: 1500px;
      }
      .subject {
        margin: 3.5rem;
        text-align: center;
      }
      .eval_list {
        margin: 0.5rem 1rem 1rem 1rem;
      }
      .review {
        / flex-shrink: 0;
        / flex-basis: 400px;
        margin: 1.5rem 10%;
        padding: 2rem;
        background-color: rgba(255,255,255,1);
        border: solid 3px rgba(0,0,0,0.7);
      }
      .review .page_tilte {
        margin-top: 0;
        margin-bottom: 0;
      }
      .review .page_tilte a {
        text-decoration: none;
      }
      .star {
        color: rgba(255,230,0,1);
        -webkit-text-stroke: 2px rgba(0,0,0,0.7);
        text-stroke: 2px rgba(0,0,0,0.7);
      }
    = javascript
      onload = function() {
        document.getElementById("eval_list").insertAdjacentHTML('afterbegin', {{.Content}});
      }

  body
    = include header_menu
    #list
      .subject
        h2 {{.UserName}}さんの付けた評価一覧
      #eval_list
