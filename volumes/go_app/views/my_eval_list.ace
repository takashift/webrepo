= doctype html
html lang=ja
  head
    = include common-setting
    = include font-family
    title {{.UserName}}さんの付けた評価一覧 | WebRepo☆彡
    = css
      #list {
        / margin: 0 0 0 150px;
        padding: 0 0 0 0.5rem;
        min-height: 1500px;
      }
      .subject {
        margin: 3.5rem;
        text-align: center;
      }
      .input {
        margin: 0.5rem 1rem 1rem 1rem;
      }
      .button {
        display: block;
        font-size: large;
        color: rgba(255,255,255,0.9);
        border-style: none;
        background-color: rgba(0,50,255,0.8);
        border-radius: 0.5rem;
        font-size: larger;
        width: auto;
        padding: 1rem;
        margin: 2rem auto 2rem auto;
        text-align: center;
        cursor: pointer;
      }

  body
    = include header_menu
    #list
      .subject
        h2 {{.UserName}}さんの付けた評価一覧
      .input
        #eval_list
